        </div>
    </div>

    <div class="mre-modal-overlay" id="modalConfirmInactivate">
        <div class="mre-modal animate-fade">
            <div class="text-center mb-3">
                <div class="bg-danger bg-opacity-10 text-danger d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 56px; height: 56px;">
                    <i data-lucide="alert-triangle" style="width: 32px; height: 32px;"></i>
                </div>
            </div>
            <div class="text-center">
                <h5 class="fw-black text-navy mb-2">Confirmar Inactivación</h5>
                <p class="text-muted small px-3">¿Está seguro que desea inactivar las siguientes referencias seleccionadas? Esta acción restringirá su uso en los trámites del sistema.</p>
            </div>
            <div class="confirm-list" id="selectedItemsList"></div>
            <div class="d-flex justify-content-end gap-2 mt-4">
                <button type="button" class="btn btn-light rounded-pill px-4 fw-bold" onclick="closeModal('modalConfirmInactivate')">Cancelar</button>
                <button type="button" class="btn-main bg-danger border-danger px-4" onclick="executeInactivation()">Sí, inactivar</button>
            </div>
        </div>
    </div>

    <script>
        // --- NAVEGACIÓN ---
        function navigateTo(viewId, element) {
            // Actualizar clases activas en sidebar
            document.querySelectorAll('.nav-link-mre').forEach(l => l.classList.remove('active'));
            element.classList.add('active');

            // Alternar vistas
            const refView = document.getElementById('referencesView');
            const constructView = document.getElementById('constructionView');

            if (viewId === 'references') {
                refView.classList.remove('d-none');
                constructView.classList.add('d-none');
            } else {
                refView.classList.add('d-none');
                constructView.classList.remove('d-none');
                lucide.createIcons(); // Recargar iconos lucide
            }
        }

        function backToReferences() {
            const refLink = document.querySelector('[onclick*="references"]');
            navigateTo('references', refLink);
        }

        const mockTipos = [
            { id: 1, dominio: 'TIPO_DOCUMENTO_IDENTIDAD', modulo: 'REGISTRO DE USUARIO', estado: 'ACTI', descripcion: 'Clases de documento civil.' },
            { id: 2, dominio: 'NACIONALIDAD', modulo: 'REGISTRO DE USUARIO', estado: 'ACTI', descripcion: 'Países de origen.' }
        ];

        const mockRef = [
            { id: 1, id_tipo: 1, descripcion: 'Cédula de Identidad', val_alf: 'CI', val_num: 1, val_fec: null, desc_larga: 'Documento nacional', usu_alta: 'CGONZALEZ', fecha_alta: '24/11/2025' },
            { id: 2, id_tipo: 1, descripcion: 'Pasaporte', val_alf: 'PAS', val_num: 2, val_fec: null, desc_larga: 'Documento de viaje', usu_alta: 'CGONZALEZ', fecha_alta: '24/11/2025' },
            { id: 7, id_tipo: 2, descripcion: 'PARAGUAYA', val_alf: 'PAR', val_num: null, val_fec: null, desc_larga: 'Local', usu_alta: 'CGONZALEZ', fecha_alta: '24/11/2025' }
        ];

        const mockAudit = {
            1: [
                { fecha: '24/11/2025 08:30', accion: 'crear', usuario: 'ADMIN_SISTEMA', descripcion: 'Creación inicial del registro de Cédula de Identidad.' },
                { fecha: '25/11/2025 10:15', accion: 'modificar', usuario: 'CGONZALEZ', descripcion: 'Actualización de la descripción larga del documento.' }
            ],
            2: [
                { fecha: '24/11/2025 09:00', accion: 'crear', usuario: 'ADMIN_SISTEMA', descripcion: 'Alta de Pasaporte en el dominio de identidad.' }
            ],
            7: [
                { fecha: '24/11/2025 09:15', accion: 'crear', usuario: 'ADMIN_SISTEMA', descripcion: 'Registro de nacionalidad paraguaya.' },
                { fecha: '01/12/2025 14:00', accion: 'inactivar', usuario: 'SUPERVISOR_MRE', descripcion: 'Inactivación temporal por mantenimiento de catálogo.' }
            ]
        };

        let selectedTipoId = null;

        document.addEventListener('DOMContentLoaded', () => {
            const selector = document.getElementById('tipoSelector');
            selector.innerHTML += mockTipos.map(t => `<option value="${t.id}">${t.dominio}</option>`).join('');
            lucide.createIcons();
        });

        function toggleUserMenu(e) { e.stopPropagation(); document.getElementById('userMenu').classList.toggle('show'); }
        document.addEventListener('click', (e) => {
            const menu = document.getElementById('userMenu');
            if (menu && !menu.contains(e.target)) menu.classList.remove('show');
        });

        function handleLogout() { if(confirm('¿Desea cerrar su sesión actual?')) location.reload(); }

        function handleExclusiveInput(changedId) {
            const fields = ['refAlf', 'refNum', 'refFec'];
            if (document.getElementById(changedId).value) {
                fields.forEach(id => { if (id !== changedId) document.getElementById(id).value = ''; });
            }
        }

        function handleTipoChange(id) {
            if (!id) {
                document.getElementById('tipoInfo').classList.add('d-none');
                document.getElementById('currentTipoLabel').innerText = '---';
                document.getElementById('btnAddRef').disabled = true;
                document.getElementById('btnInactivar').disabled = true;
                document.getElementById('btnCancelDeselect').disabled = true;
                renderReferencias(null);
                return;
            }
            selectedTipoId = parseInt(id);
            const tipo = mockTipos.find(t => t.id === selectedTipoId);
            document.getElementById('tipoInfo').classList.remove('d-none');
            document.getElementById('tipoModuloLabel').innerText = tipo.estado === 'ACTI' ? 'Activo' : 'Inactivo';
            document.getElementById('currentTipoLabel').innerText = tipo.dominio;
            document.getElementById('btnAddRef').disabled = false;
            document.getElementById('similaritySearchInput').value = '';
            renderReferencias(selectedTipoId);
        }

        function renderReferencias(tipoId, query = '') {
            const body = document.getElementById('referenciasTableBody');
            if (!tipoId) {
                body.innerHTML = `<tr><td colspan="5" class="text-center py-5 text-muted"><p class="fw-bold">Seleccione un Tipo de Referencia para gestionar sus valores</p></td></tr>`;
                return;
            }
            let data = mockRef.filter(r => r.id_tipo === tipoId);
            if (query) {
                data = data.filter(r => 
                    r.descripcion.toLowerCase().includes(query.toLowerCase()) || 
                    (r.val_alf && r.val_alf.toLowerCase().includes(query.toLowerCase())) ||
                    (r.val_num && r.val_num.toString().includes(query))
                );
            }
            if (data.length === 0) {
                body.innerHTML = `<tr><td colspan="5" class="text-center py-5 text-warning fw-bold">No se encontraron registros coincidentes.</td></tr>`;
                return;
            }
            body.innerHTML = data.map(r => `
                <tr data-ref-id="${r.id}" data-ref-desc="${r.descripcion}">
                    <td class="text-center"><input type="checkbox" class="mre-checkbox record-check" onchange="handleCheckboxChange()"></td>
                    <td class="fw-bold text-navy text-center">${r.id}</td>
                    <td><div class="fw-bold">${r.descripcion}</div></td>
                    <td><span class="badge bg-light text-dark border px-3">${r.val_alf || '-'}</span></td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <button class="btn-action-icon" title="Visualizar" onclick="openModal('modalRef', 'view', ${r.id})"><i data-lucide="eye" style="width:14px"></i></button>
                            <button class="btn-action-icon" title="Editar" onclick="openModal('modalRef', 'edit', ${r.id})"><i data-lucide="edit-3" style="width:14px"></i></button>
                        </div>
                    </td>
                </tr>
            `).join('');
            lucide.createIcons();
            handleCheckboxChange();
        }

        function handleSimilaritySearch() { renderReferencias(selectedTipoId, document.getElementById('similaritySearchInput').value); }

        function toggleSelectAll(source) {
            document.querySelectorAll('.record-check').forEach(c => c.checked = source.checked);
            handleCheckboxChange();
        }

        function deselectAll() {
            document.querySelectorAll('.record-check').forEach(c => c.checked = false);
            const selectAll = document.getElementById('selectAll');
            if (selectAll) selectAll.checked = false;
            handleCheckboxChange();
        }

        function handleCheckboxChange() {
            const checks = document.querySelectorAll('.record-check:checked');
            document.getElementById('btnInactivar').disabled = checks.length === 0;
            document.getElementById('btnCancelDeselect').disabled = checks.length === 0;
            
            const selectAll = document.getElementById('selectAll');
            const allChecks = document.querySelectorAll('.record-check');
            if (allChecks.length > 0) selectAll.checked = checks.length === allChecks.length;
        }

        function handleInactivar() {
            const listContainer = document.getElementById('selectedItemsList');
            listContainer.innerHTML = '';
            document.querySelectorAll('.record-check:checked').forEach(check => {
                const row = check.closest('tr');
                const item = document.createElement('div');
                item.className = 'confirm-item';
                item.innerHTML = `<i data-lucide="file-minus" style="width:14px; color: #64748B"></i> <span>ID ${row.getAttribute('data-ref-id')}: ${row.getAttribute('data-ref-desc')}</span>`;
                listContainer.appendChild(item);
            });
            lucide.createIcons();
            openModal('modalConfirmInactivate');
        }

        function executeInactivation() {
            alert(`Éxito: Se han inactivado las referencias seleccionadas.`);
            closeModal('modalConfirmInactivate');
            deselectAll();
            renderReferencias(selectedTipoId);
        }

        function validateRefForm(event) {
            event.preventDefault();
            const valAlf = document.getElementById('refAlf').value.trim();
            const valNum = document.getElementById('refNum').value.trim();
            const valFec = document.getElementById('refFec').value.trim();
            if ([valAlf, valNum, valFec].filter(v => v !== '').length !== 1) {
                document.getElementById('validationError').style.display = 'block';
                return false;
            }
            alert('Referencia procesada exitosamente.');
            closeModal('modalRef');
            return true;
        }

        function openModal(id, mode, refId) {
            if (id === 'modalRef') {
                const auditSection = document.getElementById('auditHistorySection');
                const btnSave = document.getElementById('btnSaveRef');
                document.getElementById('validationError').style.display = 'none';
                document.getElementById('formRef').reset();
                if (mode === 'add') {
                    document.getElementById('refModalTitle').innerText = 'Agregar Nueva Referencia';
                    btnSave.style.display = 'block';
                    enableFields(true);
                    document.getElementById('refMeta').innerText = 'Nuevo Registro';
                    auditSection.classList.add('d-none');
                } else {
                    const r = mockRef.find(i => i.id === refId);
                    document.getElementById('refDesc').value = r.descripcion;
                    document.getElementById('refAlf').value = r.val_alf || '';
                    document.getElementById('refNum').value = r.val_num || '';
                    document.getElementById('refFec').value = r.val_fec || '';
                    document.getElementById('refDescLarga').value = r.desc_larga || '';
                    document.getElementById('refMeta').innerText = `Alta: ${r.fecha_alta} por ${r.usu_alta}`;
                    if (mode === 'view') {
                        document.getElementById('refModalTitle').innerText = 'Detalle de Referencia';
                        btnSave.style.display = 'none';
                        enableFields(false);
                        auditSection.classList.remove('d-none');
                        const historyData = mockAudit[refId] || [];
                        document.getElementById('auditHistoryBody').innerHTML = historyData.length ? historyData.map(h => `
                            <tr>
                                <td class="fw-bold">${h.fecha}</td>
                                <td><span class="badge-audit badge-${h.accion}">${h.accion}</span></td>
                                <td><div class="fw-bold">${h.usuario}</div></td>
                                <td class="text-muted italic">${h.descripcion}</td>
                            </tr>
                        `).join('') : '<tr><td colspan="4" class="text-center py-3">No hay historial disponible</td></tr>';
                    } else {
                        document.getElementById('refModalTitle').innerText = 'Editar Referencia';
                        btnSave.style.display = 'block';
                        enableFields(true);
                        auditSection.classList.add('d-none');
                    }
                }
            }
            document.getElementById(id).style.display = 'flex';
            lucide.createIcons();
        }

        function closeModal(id) { document.getElementById(id).style.display = 'none'; }
        function enableFields(status) {
            document.querySelectorAll('#formRef input, #formRef textarea').forEach(i => {
                if (status) { i.removeAttribute('readonly'); i.removeAttribute('disabled'); }
                else { i.setAttribute('readonly', true); i.setAttribute('disabled', true); }
            });
        }
        window.onclick = function(e) { if (e.target.className === 'mre-modal-overlay') e.target.style.display = 'none'; }
    </script>
</body>
</html>
